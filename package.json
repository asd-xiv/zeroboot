{
  "name": "@asd14/zeroboot",
  "version": "0.1.0",
  "description": "",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/asd-xiv/zeroboot",
  "keywords": [
    "starter",
    "generator",
    "zettelkasten",
    "library-stack",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asd-xiv/zeroboot.git"
  },
  "bugs": {
    "url": "https://github.com/asd-xiv/zeroboot/issues"
  },
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt"
  },
  "type": "module",
  "exports": "./src/index.js",
  "sideEffects": false,
  "directories": {
    "bin": "bin",
    "lib": "src"
  },
  "files": [
    "bin",
    "src"
  ],
  "bin": {
    "zeroboot": "bin/zeroboot.js"
  },
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githooks",
    "setup": "npm ci --also=dev",
    "update": "ncu --interactive",
    "postupdate": "npm audit fix",
    "format": "prettier --write --prose-wrap=always .",
    "----LINT": "",
    "lint.js": "eslint src bin",
    "lint.md": "markdownlint '*.md' 'src/**/*.md'",
    "lint": "npm run lint.js && npm run lint.md",
    "typecheck": "tsc --pretty --noEmit",
    "----TEST": "",
    "test": "tape 'src/**/*.test.js' 'src/*.test.js' | tap-nirvana",
    "tdd": "nodemon --watch src --exec 'npm test'",
    "coverage": "c8 npm test && c8 report --reporter=text-lcov | coveralls",
    "----BUILD": "",
    "build.js": "swc src --out-dir dist --config module.type=es6",
    "build.types": "tsc --outDir dist --project tsconfig.build-types.json",
    "prebuild": "rm -rf dist",
    "build": "npm run build.js",
    "release": "semantic-release",
    "----DEV": "",
    "start": "swc src --watch --out-dir dist/esm --config module.type=es6"
  },
  "dependencies": {
    "@ltd/j-toml": "^1.35.2",
    "@swc/helpers": "^0.4.12",
    "async": "^3.2.4",
    "chalk": "^5.1.2",
    "chokidar": "^3.5.3",
    "cli-prompt": "^0.6.0",
    "commander": "^9.4.1",
    "ejs": "^3.1.8",
    "glob": "^8.0.3",
    "inquirer": "^9.1.4",
    "micromatch": "^4.0.5",
    "ora": "^6.1.2",
    "rambda": "^7.3.0"
  },
  "devDependencies": {
    "@asd14/eslint-config": "^8.1.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.11",
    "@types/async": "^3.2.15",
    "@types/ejs": "^3.1.1",
    "@types/glob": "^8.0.0",
    "@types/inquirer": "^9.0.2",
    "@types/tape": "^4.13.2",
    "c8": "^7.12.0",
    "eslint": "^8.26.0",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "npm-check-updates": "^16.3.15",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "tap-nirvana": "^1.1.0",
    "tape": "^5.6.1",
    "toml": "^3.0.0",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
