{
  "name": "z3r0boot",
  "version": "0.1.0",
  "description": "AI powered zettelkasten",
  "license": "BSD-3-Clause",
  "private": true,
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt",
    "email": "andrei.dumitrescu@pm.me"
  },
  "homepage": "https://github.com/asd-xiv/zeroboot",
  "keywords": [
    "zettelkasten",
    "ai",
    "llm",
    "coding-assistant",
    "prompt-engineering"
  ],
  "repository": {
    "url": "git+https://github.com/asd-xiv/zeroboot.git"
  },
  "bugs": {
    "url": "https://github.com/asd-xiv/zeroboot/issues"
  },
  "workspaces": [
    "lib.*",
    "client.*",
    "module.*/lib.*",
    "module.*/client.*"
  ],
  "scripts": {
    "----UTIL": "",
    "prepare": "git config --local core.hooksPath .githooks",
    "presetup:fresh": "rm -rf .npm node_modules package-lock.json",
    "setup:fresh": "npm i",
    "setup": "npm ci",
    "update": "ncu --interactive --deep",
    "format": "eslint --fix .",
    "----CODE-ANALYSIS": "",
    "lint": "lerna run lint",
    "typecheck": "lerna run typecheck",
    "test:unit": "lerna run test:unit",
    "test:e2e": "lerna run test:e2e",
    "----DEV": "",
    "dev": "lerna run dev,dev:types,dev:js --stream --parallel --no-bail",
    "----DEPLOY": "",
    "build": "lerna run build --no-bail",
    "release": "lerna version --create-release github --yes",
    "publish": "lerna publish --no-private"
  },
  "lint-staged": {
    "*.json": "prettier",
    ".circleci/config.yml": "circleci config validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@types/node": "^20.3.0",
    "@types/tape": "^5.6.0",
    "@z3r0boot/eslint-config": "^1.0.0",
    "@z3r0boot/prettier-config": "^1.0.0",
    "@z3r0boot/ts-config": "^1.0.0",
    "c8": "^7.14.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "lerna": "^7.0.0",
    "lint-staged": "^13.2.2",
    "markdownlint-cli": "^0.34.0",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.10.12",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.5",
    "tape": "^5.6.3",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18"
  }
}
