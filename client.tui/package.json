{
  "name": "@z3r0boot/tui",
  "version": "1.0.0",
  "description": "React Ink terminal UI for z3r0boot",
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt",
    "email": "andrei.dumitrescu@pm.me"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "url": "git+https://github.com/asd-xiv/zeroboot.git",
    "directory": "packages/tui"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "type": "module",
  "bin": {
    "zb-tui": "./bin/tui.js",
    "z3r0boot-tui": "./bin/tui.js"
  },
  "scripts": {
    "----UTIL": "",
    "format": "eslint --fix .",
    "update": "ncu --interactive",
    "----CODE-ANALYSIS": "",
    "lint:js": "eslint --quiet .",
    "lint:md": "markdownlint '*.md' --ignore CHANGELOG.md",
    "lint": "npm run lint:js && npm run lint:md",
    "typecheck": "tsc --pretty --noEmit",
    "----BUILD": "",
    "build": "swc src --out-dir dist",
    "---DEV": "",
    "predev": "rm -rf types && rm -f tsconfig.tsbuildinfo",
    "dev": "nodemon --watch src --exec 'npm run build' --ext js,ts"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.1",
    "dotenv": "^16.1.4",
    "dotenv-expand": "^10.0.0",
    "figlet": "^1.6.0",
    "ink": "^4.2.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.62",
    "@types/figlet": "^1.5.6"
  }
}
