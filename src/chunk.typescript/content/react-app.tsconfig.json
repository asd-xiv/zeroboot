{
  "include": ["src"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true,
    "incremental": true,
    "emit": false,
    "esModuleInterop": true,
    "types": ["jest", "@testing-library/jest-dom"]
  }
}
