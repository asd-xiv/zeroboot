{
  "include": [
    "src",
    ".ladle/*",
    "jest.config.js",
    "jest.setup.js",
    "postcss.config.js"
  ],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "lib": ["dom"],
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "@emotion/jest"]
  }
}
