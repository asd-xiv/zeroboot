{
  "include": ["src"],
  "exclude": ["**/node_modules"],
  "compilerOptions": {
    "module": "nodenext",
    "baseUrl": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["node"]
  }
}
