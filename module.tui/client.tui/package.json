{
  "name": "@z3r0boot/tui",
  "version": "1.0.0",
  "description": "React Ink terminal UI for z3r0boot",
  "author": {
    "name": "Andrei Dumitrescu",
    "url": "https://github.com/andreidmt",
    "email": "andrei.dumitrescu@pm.me"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "url": "git+https://github.com/asd-xiv/zeroboot.git",
    "directory": "module.tui/client.tui"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "type": "module",
  "bin": {
    "zb-tui": "./bin/tui.js",
    "z3r0boot-tui": "./bin/tui.js"
  },
  "scripts": {
    "----UTIL": "",
    "format": "eslint --fix .",
    "update": "ncu --interactive",
    "----CODE-ANALYSIS": "",
    "lint": "eslint .",
    "typecheck": "tsc --pretty --noEmit",
    "----BUILD": "",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "swc src --out-dir dist",
    "---DEV": "",
    "dev:js": "npm run build -- --watch"
  },
  "dependencies": {
    "@z3r0boot/core": "^1.0.0",
    "@z3r0boot/pure-utils": "^1.0.0",
    "@z3r0boot/ink-ui": "^1.0.0",
    "@swc/helpers": "^0.5.1",
    "dotenv": "^16.1.4",
    "dotenv-expand": "^10.0.0",
    "figlet": "^1.6.0",
    "ink": "^4.2.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.62",
    "@types/dotenv": "^8.2.0",
    "@types/figlet": "^1.5.6",
    "@types/react": "^18.2.11"
  }
}
